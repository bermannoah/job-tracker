<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>
  
  <div class="field">
  <%= f.label :category %>
  <%= f.select(:category_id, @category_options)  %>
  <%= link_to "Create New Category", new_category_path %>
  </div>
  
  <%= f.submit %>
<% end %>
